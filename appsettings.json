{
  "Serilog": {
    "Using": ["Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "./data/Logs/log.txt",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 10485760,
                "rollOnFileSizeLimit": true
              }
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "KanzApi": {
    "BaseUrl": "https://api.kanzway.com/v1",
    "IpAddress": "20.160.208.246",
    "CorsPolicyOrigins": ["https://kanzway.com", "https://www.kanzway.com"],
    "Jwt": {
      "Audience": "https://api.kanzway.com",
      "Issuer": "https://api.kanzway.com",
      "Validity": 300,
      "RefreshTokenValidity": 86400
    },
    "Mail": {
      "Sender": "no-reply@kanzway.com"
    },
    "Activation": {
      "Validity": 3600
    },
    "Otp": {
      "MaxAttempt": 3,
      "Validity": 180
    },
    "StorageDir": "./data",
    "InclusiveTax": 0.15,
    "CommissionRate": 0.1,
    "Logging": {
      "MaskedKeys": ["authorization", "password", "pin", "token"],
      "SensitiveDataMasked": true
    }
  },
  "Graph": {
    "Login": {
      "BaseUrl": "https://login.microsoftonline.com"
    },
    "Mail": {
      "BaseUrl": "https://graph.microsoft.com"
    }
  },
  "Msegat": {
    "BaseUrl": "https://www.msegat.com"
  },
  "Oto": {
    "BaseUrl": "https://api.tryoto.com",
    "ShipmentEnabled": true
  },
  "SendGrid": {
    "BaseUrl": "https://api.sendgrid.com"
  },
  "TinyUrl": {
    "BaseUrl": "https://api.tinyurl.com"
  },
  "Urway": {
    "BaseUrl": "https://payments.urway-tech.com",
    "CallbackPath": "/v1/callback/orders/pay"
  },
  "WebClient": {
    "BaseUrl": "https://www.kanzway.com"
  },
  "VendorClient": {
    "BaseUrl": "https://vendor.kanzway.com"
  },
  "AdminClient": {
    "BaseUrl": "https://admin.kanzway.com"
  },
  "Meilisearch": {
    "BaseUrl": "https://edge.meilisearch.com",
    "DelayInMs": 500,
    "ProductIndex": "products",
    "FamilyIndex": "families",
    "FamilyFilterable": [
      "familyCode",
      "brand",
      "categories",
      "priceSummaries",
      "specificationValuesEn",
      "specificationValuesAr"
    ],
    "FamilySearchable": [
      "familyCode",
      "namesEn",
      "namesAr",
      "brand",
      "mpns",
      "categories",
      "priceSummaries",
      "specificationValuesEn",
      "specificationValuesAr"
    ],
    "FamilySortable": [
      "priceSummaries.AE.price.lowestPrice",
      "priceSummaries.ID.price.lowestPrice",
      "priceSummaries.MY.price.lowestPrice",
      "priceSummaries.QA.price.lowestPrice",
      "priceSummaries.SA.price.lowestPrice"
    ],
    "ProductFilterable": [
      "familyCode",
      "category",
      "mpn",
      "gtin",
      "name",
      "brand",
      "priceSummaries.AE.price.lowestPrice",
      "priceSummaries.ID.price.lowestPrice",
      "priceSummaries.MY.price.lowestPrice",
      "priceSummaries.QA.price.lowestPrice",
      "priceSummaries.SA.price.lowestPrice",
      "specificationValuesEn",
      "specificationValuesAr"
    ],
    "ProductSearchable": [
      "familyCode",
      "category",
      "mpn",
      "gtin",
      "name",
      "brand",
      "specificationValuesEn",
      "specificationValuesAr"
    ],
    "ProductSortable": [
      "priceSummaries.AE.price.lowestPrice",
      "priceSummaries.ID.price.lowestPrice",
      "priceSummaries.MY.price.lowestPrice",
      "priceSummaries.QA.price.lowestPrice",
      "priceSummaries.SA.price.lowestPrice"
    ]
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:80"
      },
      "Https": {
        "Url": "https://*:443",
        "Certificate": {
          "Path": "/app/certs/fullchain.pem",
          "KeyPath": "/app/certs/privkey.pem"
        }
      }
    }
  }
}
